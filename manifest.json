{
  "name": "Blaseball with Persephone Jones",
  "version": "1.0",
  "description": "Hear a play by play of Blaseball games with your favorite accidental announcer, Persephone Jones",
  "permissions": [
    "*://*/*",
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation"
  ],
  "options_page": "/options/options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "/popup/popup.html",
    "default_icon": "images/microphone.png"
  },
  "manifest_version": 2
}